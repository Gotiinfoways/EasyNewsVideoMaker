<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--        Video Edite-->
    <LinearLayout
        android:id="@+id/linVideoPath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal"
        android:visibility="visible">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_5sdp"
            app:cardBackgroundColor="#03A9F4"
            app:cardCornerRadius="@dimen/_10sdp">

            <ImageView
                android:id="@+id/imgVideoPlayButton"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/ic_play_recoding"
                app:tint="@color/white" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cdVideoPath"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="1"
            app:cardBackgroundColor="#94D6F4"
            app:cardCornerRadius="@dimen/_5sdp">

            <TextView
                android:id="@+id/txtVideoPath"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:hint="Video.mp4"
                android:paddingHorizontal="@dimen/_20sdp"
                android:singleLine="true"
                android:textSize="@dimen/_15sdp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cdVideoAdd"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/_5sdp"
            app:cardBackgroundColor="#94D6F4"
            app:cardCornerRadius="@dimen/_5sdp">

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/ic_add_icon" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>