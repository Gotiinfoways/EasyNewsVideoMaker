<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightblack"
    android:orientation="vertical"
    tools:context=".reels_maker.Insta_2_Activity">

    <FrameLayout
        android:id="@+id/frameView"
        android:layout_width="@dimen/_290sdp"
        android:layout_height="@dimen/_480sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/i2">

        <TextView
            android:id="@+id/txtLiveNews"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_40sdp"
            android:background="@drawable/p_6"
            android:backgroundTint="@color/newyblue"
            android:gravity="center"
            android:text="LIVE NEWS"
            android:textColor="@color/white"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/txtLive"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:background="@drawable/p_6"
            android:backgroundTint="@color/brown"
            android:gravity="center"
            android:text="LIVE"
            android:textColor="@color/white"
            android:textStyle="italic" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_288sdp"
            android:layout_marginTop="@dimen/_47sdp"
            android:src="@drawable/i__2" />

        <TextView
            android:id="@+id/txtBraking1"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_marginHorizontal="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_55sdp"
            android:text="BREAKING"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtBraking2"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_gravity="end"
            android:layout_marginHorizontal="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_310sdp"
            android:text="BREAKING"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_225sdp"
            android:layout_marginTop="@dimen/_80sdp"
            android:src="@drawable/i_2">

        </ImageView>

        <VideoView
            android:id="@+id/vidView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_225sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_80sdp"
            android:scaleType="fitXY"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="@dimen/_3sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_70sdp"
            android:background="@drawable/p11"
            android:backgroundTint="@color/brown"
            android:gravity="center|end" />

        <TextView
            android:id="@+id/txtChannelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_310sdp"
            android:text="Channel Name"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtBreakingNews"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_115sdp"
            android:text="BREAKING NEWS"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtAdditionalText"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:text="Additional Text Here"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />

    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cdExportBtn"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_110sdp"
        android:layout_marginBottom="17dp"
        android:backgroundTint="@color/Red"
        app:cardCornerRadius="@dimen/_35sdp"
        app:cardElevation="@dimen/_2sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Export"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>