<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".news_poster.News_Poster_Activity"
    android:background="@color/lightblack"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Red">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="News Poster"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:id="@+id/post1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                android:src="@drawable/post1" />

            <ImageView
                android:id="@+id/post2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                android:layout_below="@id/post1"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/post2" />

            <ImageView
                android:id="@+id/post3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                android:layout_below="@id/post2"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/post3" />

            <ImageView
                android:id="@+id/post4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                android:layout_below="@id/post3"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/post4" />

            <ImageView
                android:id="@+id/post5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                android:layout_below="@id/post4"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/post5" />

            <ImageView
                android:id="@+id/post6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                android:layout_below="@id/post5"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/post6" />

            <ImageView
                android:id="@+id/post7"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                android:layout_below="@id/post6"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/post7" />

            <ImageView
                android:id="@+id/post8"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                android:layout_below="@id/post7"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/post8" />

            <ImageView
                android:id="@+id/post9"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                android:layout_below="@id/post8"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/post9" />

            <ImageView
                android:id="@+id/post10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                android:layout_below="@id/post9"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/post10" />

            <ImageView
                android:id="@+id/post11"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                android:layout_below="@id/post10"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/post11" />

            <ImageView
                android:id="@+id/post12"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                android:layout_below="@id/post11"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/post12" />

            <ImageView
                android:id="@+id/post13"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                android:layout_below="@id/post12"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/post13" />

            <ImageView
                android:id="@+id/post14"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                android:layout_below="@id/post13"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/post14" />

            <ImageView
                android:id="@+id/post15"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                android:layout_below="@id/post14"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/post15" />

            <ImageView
                android:id="@+id/post16"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                android:layout_below="@id/post15"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/post16" />

            <ImageView
                android:id="@+id/post17"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                android:layout_below="@id/post16"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/post17" />

            <ImageView
                android:id="@+id/post18"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                android:layout_below="@id/post17"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/post18" />

            <ImageView
                android:id="@+id/post19"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                android:layout_below="@id/post18"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/post19" />

            <ImageView
                android:id="@+id/post20"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                android:layout_below="@id/post19"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/post20" />

        </RelativeLayout>
    </ScrollView>

</LinearLayout>